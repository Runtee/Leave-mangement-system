<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="/public/css/sign.css">
    <link rel="stylesheet" type="text/css" href="/public/css/home.css">

    <title>Sign up</title>
</head>

<body style="background-image :url(https://cdn.pixabay.com/photo/2017/08/01/00/38/man-2562325_960_720.jpg)">
    <div class=''>
        <nav class="headers navbar navbar-expand-sm " aria-label="nav">
            <div class="container-fluid">
                <img src='/public/img/logo.png' class="">
                <a class="navbar-brand">The True Tech</a>
                <button class="navbar-toggler toggle" type="button" data-bs-toggle="collapse" data-bs-target="#navbar" aria-controls="navbarsExample03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
        
              <div class="collapse navbar-collapse" id="navbar">
                <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                </ul>
                <ul class="navbar-nav">
        
                    <li class="nav-item" style="background-color: rgb(38, 5, 65); border: 1px solid white; ">
                        <a class="nav-link" href="/new">Create Account</a>
                    </li>
                    <li class="nav-item">
                        <a href="/" class="nav-link" style="color: rgb(255, 255, 255) ;"> Login </a>
                    </li>
                </ul>
              </div>
            </div>
          </nav>
    </div>

    <div>
        <h1 style="text-align: center; color: white;">Create your account</h1>
    </div>
    <div class="danger">
        <% if(errors !=null && errors.length> 0){ %>

            <% for (var i=0; i < errors.length; i++) { %>
                <%= errors[i] %>
                    <% } %>
                        <% } %>
    </div>
   <section>
    <div class="signinbox">
        <!-- <img src='/public/img/logo.png'> -->
        <p>The True Tech staff portal</p>

        <h2>Create your account now</h2>
        <form action="/new/post" method='POST'>
            <select name="option">
                <option>Staff</option>
                <option>Supervisor</option>
            </select> <input type="text" name="username" placeholder="Enter your username">
            <!-- <p>password</p> -->
            <br>

            <input type="password" name="password" placeholder="Enter your password" min="5">
            <br>
            <%errors%>

                <input type="submit" value=Continue>
        </form>
        <p class="mod">Already have an account click <a href="/">here</a></p>

    </div>
</section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>

</html>