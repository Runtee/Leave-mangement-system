<body>
<%- include('layouts/header'); -%>
 
    <div class="nav-bar">
        <nav>
            <ul>
                <li>
                    <a href="/dashboard/profile">Profile</a>
                </li>
                <li>
                    <a href="/dashboard/apply"> Apply For Leave</a>
                </li>
                <li class="currentL">
                    <a href="/dashboard/track"> Track Leave</a>
                </li>
